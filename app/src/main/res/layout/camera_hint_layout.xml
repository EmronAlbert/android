<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/camera_hint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
        android:id="@+id/hint_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:overScrollMode="never"
        tools:listitem="@layout/item_hint_text" />

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:src="@drawable/close_dark_b_g"
        android:background="@drawable/tr_white_circle"
        android:layout_alignParentRight="true" />

    <com.matthewtamlin.sliding_intro_screen_library.DotIndicator
        android:id="@+id/hint_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:selectedDotColor="@color/md_grey_200"
        app:selectedDotIndex="0"
        app:unselectedDotColor="@color/md_grey_200"
        tools:visibility="visible" />
</RelativeLayout>