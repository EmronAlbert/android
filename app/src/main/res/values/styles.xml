<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Application theme -->
  <style name="AppTheme"
      parent="Theme.AppCompat.NoActionBar">
    <item name="android:dialogTheme">@style/DialogTheme</item>
    <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    <item name="android:windowContentTransitions">false</item>
    <item name="colorControlHighlight">@color/ripple_gray_light</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:windowSharedElementEnterTransition">@android:transition/fade</item>
    <item name="android:windowSharedElementExitTransition">@android:transition/fade</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowAnimationStyle">@null</item>
    <item name="colorAccent">@color/accent_material_dark_1</item>
    <item name="actionModeStyle">@style/ActionMode</item>
  </style>

  <style name="AppTheme.NoSplash"
      parent="AppTheme">
    <item name="android:windowBackground">@drawable/splash_background_no_drawable</item>
  </style>

  <style name="AppTheme.Light"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:dialogTheme">@style/DialogTheme</item>
    <item name="android:windowContentTransitions">false</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:windowSharedElementEnterTransition">@android:transition/fade</item>
    <item name="android:windowSharedElementExitTransition">@android:transition/fade</item>
    <item name="android:windowActionBar">false</item>
    <item name="colorAccent">@color/accent_material_dark_1</item>
    <item name="actionModeStyle">@style/ActionMode</item>
  </style>

  <style name="AppThemeLogin"
      parent="AppTheme">
    <item name="android:windowBackground">@drawable/splashscreen_background</item>
  </style>

  <style name="MyTheme"
      parent="@android:style/Theme.Holo.Light"/>

  <style name="AppTheme.ActionBarStyle"
      parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
  </style>

  <style name="AppTheme.ActionBar.TitleTextStyle"
      parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/darker_grey</item>
  </style>

  <style name="ActionMode"
      parent="@style/Widget.AppCompat.ActionMode">
    <item name="background">@color/background_material_dark_1</item>
  </style>

  <style name="AlertDialog"
      parent="AppCompatAlertDialogStyleLight">
    <item name="colorPrimary">@color/primary_dark_material_dark_1</item>
    <item name="colorPrimaryDark">@color/background_material_dark_1</item>
    <item name="colorAccent">@color/accent_material_dark_1</item>
  </style>

  <style name="AlertDialogIssueReport"
      parent="AppCompatAlertDialogStyleDark">
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryDark">@color/white</item>
    <item name="colorAccent">@color/issue_report_blue</item>
  </style>

  <style name="AppCompatAlertDialogStyleLight"
      parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/accent_material_dark_1</item>
    <item name="android:textColorPrimary">@color/text_colour_default</item>
    <item name="android:background">@color/background_material_dark_1</item>
  </style>

  <style name="AppCompatAlertDialogStyleDark"
      parent="Theme.AppCompat.Dialog.Alert">
    <item name="colorAccent">@color/accent_material_dark_1</item>
    <item name="android:textColorPrimary">@color/text_colour_default_light</item>
    <item name="android:background">@color/white</item>
  </style>

  <style name="textStyle"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@color/text_colour_default</item>
    <item name="android:textSize">@dimen/text_size_default</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="textStyle.Light"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@color/text_colour_default_light</item>
    <item name="android:textSize">@dimen/text_size_default</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="toolbarButtonStyle">
    <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
  </style>

  <style name="DialogTheme"
      parent="Base.Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/accent_material_dark_1</item>
  </style>

  <style name="EditText.Report"
      parent="Widget.AppCompat.EditText">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textColorHint">@color/issue_report_text_gray</item>
    <item name="android:colorAccent">@color/issue_report_blue</item>
    <item name="android:textCursorDrawable">@color/issue_report_blue</item>
    <item name="android:backgroundTint">@color/issue_report_blue</item>
    <item name="colorAccent">@color/issue_report_blue</item>
    <item name="android:colorControlNormal">@color/background_material_dark_1</item>
    <item name="colorControlNormal">@color/background_material_dark_1</item>
    <item name="android:colorControlActivated">@color/issue_report_blue</item>
    <item name="colorControlActivated">@color/issue_report_blue</item>
  </style>

  <style name="PreviewButton"
      parent="Widget.AppCompat.Button">
    <item name="android:textColor">@color/white</item>
    <item name="colorButtonNormal">@color/white</item>
  </style>

  <style name="textStyle.actionBarTitleExpanded"
      parent="textStyle">
    <item name="android:textSize">@dimen/text_size_profile_title_expanded</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="textStyle.actionBarTitleCollapsed"
      parent="textStyle">
    <item name="android:textSize">@dimen/text_size_profile_title_collapsed</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="textStyle.actionBarTabItem">
    <item name="android:textSize">@dimen/text_size_profile_tab_item</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/profile_header_info_text_gray</item>
  </style>

  <style name="profileHeaderInfoLight"
      parent="@android:style/TextAppearance">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/profile_info_text_light</item>
    <item name="android:textStyle">normal</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="profileHeaderInfoDark"
      parent="@android:style/TextAppearance">
    <item name="android:textSize">17sp</item>
    <item name="android:textColor">@color/profile_info_text_dark</item>
    <item name="android:textStyle">normal</item>
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="textStyle.profileInfoTextSmall"
      parent="textStyle">
    <item name="android:textSize">@dimen/text_size_profile_header_info_small</item>
    <item name="android:textColor">@color/profile_header_info_text_gray</item>
    <item name="android:textStyle">normal</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="textStyle.profileInfoTextLarge"
      parent="textStyle">
    <item name="android:textSize">@dimen/text_size_profile_header_info_large</item>
    <item name="android:textColor">@color/profile_header_info_text_white</item>
    <item name="android:textStyle">normal</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="profileHeaderInfoTextSmall"
      parent="textStyle">
    <item name="android:textSize">@dimen/text_size_profile_header_info_small</item>
    <item name="android:textColor">@color/profile_list_header_info_text_light</item>
    <item name="android:textStyle">normal</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:gravity">center</item>
    <item name="android:lineSpacingExtra">9dp</item>
  </style>

  <style name="profileHeaderInfoTextLarge"
      parent="textStyle">
    <item name="android:textSize">@dimen/text_size_profile_header_info_large</item>
    <item name="android:textColor">@color/profile_list_header_info_text_dark</item>
    <item name="android:textStyle">normal</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:gravity">center</item>
  </style>
</resources>
